{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      // 以Xtx开头的组件，在components目录下文件查找
      "^Xtx(.*)": "@/components/Xtx$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录",
        "enableShareAppMessage": true, // 启用分享功能
        "enableShareTimeline": true // 启用分享到朋友圈
      }
    },

    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "Dashboard",
        "enableShareAppMessage": true, // 启用分享功能
        "enableShareTimeline": true, // 启用分享到朋友圈
        "enablePullDownRefresh": true // 启用下拉刷新
      }
    },
    {
      "path": "pages/sale/sale",
      "style": {
        "navigationBarTitleText": "销售项目",
        "enableShareAppMessage": true, // 启用分享功能
        "enableShareTimeline": true, // 启用分享到朋友圈
        "enablePullDownRefresh": true // 启用下拉刷新
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  // 设置 TabBar
  "tabBar": {
    "color": "#B8B8B8",
    "selectedColor": "#163172",
    "backgroundColor": "#fff",
    "borderStyle": "white",
    "list": [
      {
        "text": "DASHBOARD",
        "pagePath": "pages/index/index",
        "iconPath": "static/tabs/main-unselect.png",
        "selectedIconPath": "static/tabs/main-selected.png"
      },
      // {
      //   "text": "分类",
      //   "pagePath": "pages/category/category",
      //   "iconPath": "static/tabs/category_default.png",
      //   "selectedIconPath": "static/tabs/category_selected.png"
      // },
      // {
      //   "text": "购物车",
      //   "pagePath": "pages/cart/cart",
      //   "iconPath": "static/tabs/cart_default.png",
      //   "selectedIconPath": "static/tabs/cart_selected.png"
      // },
      {
        "text": "分类项目",
        "pagePath": "pages/sale/sale",
        "iconPath": "static/tabs/seal-unselect.png",
        "selectedIconPath": "static/tabs/seal-selected.png"
      }
    ]
  }
}
